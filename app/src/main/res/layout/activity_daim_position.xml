<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:foregroundGravity="top"
    app:layout_anchorGravity="">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/daim1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kapanDaimNo"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Daim 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/status_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:srcCompat="@drawable/waiting" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kapanDaimNo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/spinnerGalaxy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/sendTo"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/edit_text_border_color"
                android:foregroundGravity="center"
                android:gravity="center"
                android:maxLength="10"
                android:nextFocusForward="@+id/ruffWeight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:text="  123  "
                android:textCursorDrawable="@null"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/id6"
                app:layout_constraintTop_toBottomOf="@+id/readyPis" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="104dp"
                android:layout_marginTop="8dp"
                android:inputType="numberSigned|numberDecimal"
                android:text="ReadyWeight :"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/id6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="123dp"
                android:text="RuffWeight :"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/breakPis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#FF0000"
                app:layout_constraintBottom_toTopOf="@+id/addData"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner2" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_margin="6dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_border_color"
                android:gravity="center"
                android:hint="  123  "
                android:inputType="textPersonName"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/ruffWeight" />

            <TextView
                android:id="@+id/ruffWeight"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_border_color"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="  123  "
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="6"
                android:nextFocusForward="@+id/daimNo"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textCursorDrawable="@null"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:text="Date : "
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Total Pis : "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/totalPis"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/edit_text_border_color"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="  123  "
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="6"
                android:nextFocusForward="@+id/ruffWeight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textCursorDrawable="@null"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ready Pis :"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/id6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Department : "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/readyPis"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_margin="6dp"
                android:background="@drawable/edit_text_border_color"
                android:gravity="center"
                android:hint="  123  "
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="6"
                android:nextFocusForward="@+id/expWeight"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textCursorDrawable="@null"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/totalPis" />

            <EditText
                android:id="@+id/readyWeight"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_margin="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edit_text_border_color"
                android:gravity="center"
                android:hint="  123  "
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textCursorDrawable="@null"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <Button
                android:id="@+id/addData"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:text="add"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>